<form action="/toy/edit/{{ toy._id }}" method="post">
   <h1>Edit new Toy</h1>
   Toy name: <input type="text" name="name" id="" required value="{{ toy.name }}">
   <br><br>
   Toy description: <input type="text" name="description" id="" required value="{{ toy.description }}" >
   <br><br>
   Toy price: <input type="text" name="price" id="" required value="{{ toy.price }}">
   <br><br>
   Toy image: <input type="url" name="image" id="" required value="{{ toy.image }}">
   <img src="{{ toy.image }}" alt="" width="100" height="100">
   <br><br>
   Toy brand: <br>
   <select name="brand">
      {{#each brands }}
      <option value="{{ _id }}"> {{ name }}</option>
      {{/each}}
   </select>
   <br><br>
   <input type="submit" value="Add">
</form>